<?xml version="1.0"?>
<config>
	<modules>
		<Np_Vendor>
			<version>0.0.14</version>
		</Np_Vendor>
	</modules>
	<admin>
		<routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>Np_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
	</admin>
	<adminhtml>
		<menu>
			<vendor>
				<title>Vendor</title>
				<sort_order>40</sort_order>
				<children>
					<items>
						<title>Manage Vendors</title>
						<action>vendor/adminhtml_vendor/</action>
						<sort_order>0</sort_order>
					</items>
				</children>
			</vendor>
		</menu>
	</adminhtml>
	<global>
		<helpers>
            <vendor>
                <class>Np_Vendor_Helper</class>
            </vendor>
        </helpers>
        <blocks>
            <vendor>
                <class>Np_Vendor_Block</class>
            </vendor>
        </blocks>
        <models>
            <vendor>
                <class>Np_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>Np_Vendor_Model_Resource</class>
                <entities>
					<vendor>
						<table>vendor</table>
					</vendor>
					<vendor_decimal>
						<table>vendor_decimal</table>
					</vendor_decimal>
					<vendor_datetime>
						<table>vendor_datetime</table>
					</vendor_datetime>
					<vendor_int>
						<table>vendor_int</table>
					</vendor_int>
					<vendor_varchar>
						<table>vendor_varchar</table>
					</vendor_varchar>
					<vendor_text>
						<table>vendor_text</table>
					</vendor_text>
					<vendor_char>
						<table>vendor_char</table>
					</vendor_char>
					<eav_attribute>
						<table>vendor_eav_attribute</table>
					</eav_attribute>
				</entities>
            </vendor_resource>
        </models>	
        <resources>
        	<vendor_setup>
        		<setup>
        			<module>Np_Vendor</module>
                    <class>Np_Vendor_Model_Resource_Setup</class>
        		</setup>
        		<connection>
        			<use>core_setup</use>
        		</connection>
        	</vendor_setup>
        	<vendor_write>
        		<connection>
        			<use>core_write</use>
        		</connection>
        	</vendor_write>
        	<vendor_read>
        		<connection>
        			<use>core_read</use>
        		</connection>
        	</vendor_read>
        </resources>
    </global>
    <adminhtml>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
	</adminhtml>
</config>